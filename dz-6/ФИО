#include <iostream>
#include <string.h>
#include <windows.h>
#include <cstdlib>
using namespace std;

int main()
{
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);
	setlocale(LC_ALL, "Russian");

	char str[80];
	cin.get(str, (unsigned)_countof(str));
	char name, fname;

	for (int i = 0; i < strlen(str); i++)
	{
		if (str[i] == ' ')
		{
			name = str[i + 1];
			for (int j = i + 1; j < strlen(str); j++)
				if (str[j] == ' ') fname = str[j + 1]; break;
			break;
		}
	}

	cout << name << ". " << fname << ". ";
	for (int i = 0; str[i] != ' '; i++) cout << str[i];
	cout << endl;

	system("pause");
	return 0;
}
